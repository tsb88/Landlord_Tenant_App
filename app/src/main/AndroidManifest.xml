<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brett.landlord_tenant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LandlordRentActivity"
            android:theme="@style/AppTheme" />

        <activity android:name=".TenantBillsActivity"></activity>
        <activity android:name=".TenantUtilitiesActivity" />

        <activity
            android:name=".createAccount"
            android:screenOrientation="portrait" />
        <activity android:name=".MainActivity" />
        <activity android:name=".maintenanceActivity" />
        <activity android:name=".messagesActivity" />
        <activity android:name=".contactActivity" />
        <activity android:name=".utilitiesActivity" />
        <activity
            android:name=".leaseActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".TenantRentActivity" />
        <activity android:name=".SignatureActivity" />

        <service
            android:name=".NotificationService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".WebViewActivity"></activity>

    </application>

</manifest>