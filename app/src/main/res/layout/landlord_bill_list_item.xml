<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_bill_amount_landlord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPaleGreen"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/text_bill_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TENANT NAME HERE"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/text_bill_amount_landlord" />

    <TextView
        android:id="@+id/text_bill_message_landlord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:textColor="@color/colorSalmon"
        android:layout_marginStart="5dp"
        android:layout_below="@id/text_bill_receiver"
        android:layout_toEndOf="@id/text_bill_amount_landlord"/>

    <TextView
        android:id="@+id/text_bill_due_date_landlord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due: DEC 23 2017"
        android:textStyle="italic|bold"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/text_bill_amount_landlord"
        android:layout_below="@id/text_bill_message_landlord"/>

    <TextView
        android:id="@+id/text_bill_paid_landlord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAID/UNPAID"
        android:textStyle="bold"
        android:textColor="@color/colorPaleGreen"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/text_bill_due_date_landlord"
        android:layout_below="@id/text_bill_message_landlord"/>

    <!--<CheckBox-->
        <!--android:id="@+id/checkbox_bill_item_landlord"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_centerVertical="true"/>-->

</RelativeLayout>